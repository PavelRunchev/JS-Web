<form class="form center-form" method="post" enctype="multipart/form-data">
  <h2>Edit Product</h2>
  <div class="form-group">
    <label for="name">Name</label>
    <input id="name" name="name" type="text" class="input-field" value="{{product.name}}" />
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <textarea id="description" name="description" type="text" class="input-field" rows="8">
      {{product.description}}
    </textarea>
  </div>

  <div class="form-group">
    <label for="price">Price</label>
    <input id="price" name="price" type="number" step="0.01" class="input-field" value="{{product.price}}" />
  </div>

  <div class="form-group">
    <label for="image">Image</label>
    <input id="image" name="image" type="text" value="{{product.image}}" class="input-field" />
  </div>

  <div class="form-group">
    <label for="group">Group</label>
    <select class="input-field" name="category">
            {{#each categories}}
                <option value="{{_id}}">{{name}}</option>
            {{/each}}
    </select>
  </div>
  <div class="form-group">
    <input class="btn form-btn btn-warning" type="submit" value="Edit">
  </div>
</form>
