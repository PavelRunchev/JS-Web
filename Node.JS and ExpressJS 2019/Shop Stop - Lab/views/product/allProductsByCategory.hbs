<h2>All {{categoryName}}</h2>
<div class="cards">
  {{#each products}}
  <div class="product-card">
    <img class="product-img" src="{{this.image}}">
    <h2>{{this.name}}</h2>
    <p>{{this.description}}</p>
    {{#if isAuthed}}
      <a class="btn btn-sm btn-success" href="/product/product-buy/{{this._id}}">Buy</a>
      {{#if hasAccess}}
        <a class="btn btn-sm btn-warning" href="/product/product-edit/{{this._id}}">Edit</a>
        <a class="btn btn-sm btn-danger" href="/product/product-delete/{{this._id}}">Delete</a>
      {{/if}}
    {{/if}}
  </div>
  {{/each}}
</div>