<!DOCTYPE html>
<html lang="en">

<head>
    <title>My Cool Blog System</title>
    <link href="/css/site.css" type="text/css" rel="stylesheet" />
</head>

<body>
    <div class="nav">
        <ul class="menu">
            <li>
                <a href="/">Home</a>
            </li>
            {{#if isAuthed}}
                <li class="right">
                    <form id="logout" action="/user/logout" method="POST"></form>
                    <a href="javascript:document.getElementById('logout').submit()">Logout</a>
                </li>
                <li class="right">Welcome, {{currentUser.username}}!</li>
            {{else}}
                <li class="right">
                    <a href="/user/register">Register</a>
                </li>
                <li class="right">
                    <a href="/user/login">Login</a>
                </li>
            {{/if}}
        </ul>
    </div>

    {{#if globalError}}
        <span class="globalError">{{globalError}}</span>
    {{/if}}

    {{{body}}}
</body>

</html>