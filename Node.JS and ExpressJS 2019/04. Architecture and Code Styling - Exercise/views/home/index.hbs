<div class="container body-content">
    <div class="row">
        <div class="col-md-6 mx-auto">
            {{#each articles}}
                <article>
                    <header>
                        <h2>{{this.title}}</h2>
                    </header>
                    <p>{{this.content}}</p>
                    <small class="author">{{this.author.email}}</small>

                    <footer class="my-5">
                        <div class="pull-right m-5">
                            <a class="btn btn-default btn-xs" href="/article/details/{{this._id}}">Read more &raquo;</a>
                        </div>
                    </footer>
                </article>
            {{/each}}
        </div>
    </div>
</div>