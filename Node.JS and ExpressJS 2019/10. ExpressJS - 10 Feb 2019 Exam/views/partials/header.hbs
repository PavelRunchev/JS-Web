<header>
    <ul>
        <li><a href="/">Home</a></li>
        {{#if isAuthed}}
            {{#if isAdmin}}
                <li><a href="/project/projects-admin">Projects</a></li>
                <li><a href="/team/teams-admin">Teams</a></li>
                <li><a href="/team/team-create">Create Team</a></li>
                <li><a href="/project/project-create">Create Project</a></li>
            {{else}}
                <li><a href="/project/projects">Projects</a></li>
                <li><a href="/team/teams">Teams</a></li>
            {{/if}}
        {{/if}}
        <div class="right">
            {{#if isAuthed}}
                {{#if isAdmin}}
                    <li>Welcome, Admin!</li>
                {{else}}
                    <li>Welcome, {{currentUser.username}}!</li>
                {{/if}}
                <li><a href="/user/myProfile">Profile</a></li>
                <li>
                    <form id="logout-form" action="/user/logout" method="post"></form>
                    <a href="javascript:document.getElementById('logout-form').submit()">Logout</a>
                </li>
            {{else}}
                <li><a href="/user/login">Login</a></li>
                <li><a href="/user/register">Register</a></li>
            {{/if}}
        </div>
    </ul>
</header>