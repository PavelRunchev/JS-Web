<h1>Projects</h1>
<form class="search" action="/project/project-search" method="post">
  <label>Seach: </label>
  <input type="text" name="projectName">
  <input type="submit" value="Search">
</form>
<div class="projects">
    {{#each projects}}
        <div class="project">
            <h2>{{name}}</h2>
            <h3>Team: 
                {{#if team}}
                {{team.name}}
                {{else}}
                No Team assigned
                {{/if}}
            </h3>
            <p>Description: {{description}}</p>
        </div>
    {{/each}}
</div>