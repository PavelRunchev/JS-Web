<div class="row">
    <div class="col text-center">
        <a href="/course/course-create"><button type="button" class="btn btn-primary btn-lg">Create Course</button></a>
    </div>
</div>


<div class="border border-light p-5">
    <h1 class="text-center">Choose Course</h1>
    <ul class="list-group">
        {{#each courses}}
            <li class="list-group-item">
                {{title}}
                <div class="float-right">
                    <div class="btn-group" role="group">
                        <a href="/course/course-edit/{{_id}}"><button type="button" class="btn btn-warning">Edit Course</button></a>
                        <a href="/course/course-addLecture"><button type="button" class="btn btn-success">Add lectures</button></a>
                    </div>
                    Lectures in course
                    <span class="badge badge-primary badge-pill">{{countLectures}}</span>
                </div>
            </li>
        {{else}}
            <h2>No courses in database. Please create one!</h2>
        {{/each}}
    </ul>
</div>