<h1>Welcome to SoftUni Wiki!</h1>
<div class="spacer">
    <h2>{{article.title}}
        {{#if currentUser}}
            <div class="controls">
                {{#if article.isLocked}}
                    {{#if isAdmin}}
                        <a href="/article/delete/{{article._id}}" class="deleteArticle">[delete]</a>
                        <a href="/article/edit/{{article._id}}" class="editArticle">[edit]</a>
                    {{/if}}
                {{else}}
                    {{#if isAdmin}}
                        <a href="/article/delete/{{article._id}}" class="deleteArticle">[delete]</a>
                    {{/if}}
                    <a href="/article/edit/{{article._id}}" class="editArticle">[edit]</a>
                {{/if}}
                <a href="/edit/history/{{article._id}}" >[history]</a>
            </div>
        {{/if}}
    </h2>
    <article>
        {{#each splitedContent}}
            </P>
                <br>
                {{this}}
                <br>
            <p>
        {{/each}}
    </article>
</div>