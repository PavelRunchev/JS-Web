<h1>Your orders</h1>
<div class="orders">
    {{#each orders}}
        <div class="order">
            <span class="order-time">{{data}}</span>
            <span class="order-name">{{product.category}} doner, {{product.size}} cm</span>
            <span class="order-status">{{status}}</span>
            <a href="/order/order-details/{{_id}}" class="button order-button">Details</a>
        </div>
    {{/each}}

    {{#if noOrders}}
        <br>
        <h3 style="font-style: italic">You have no orders!</h3>
        <br>
    {{/if}}
</div>