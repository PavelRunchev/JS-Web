    {{#each chickens}}
    <div class="product-card"><img src="{{imageUrl}}"><a href="/order/customize-order/{{_id}}" class="button product-title">Order</a>
    </div>
    {{/each}}
    <h2>Beef Doner</h2>
    {{#each beefs}}
    <div class="product-card"><img src="{{imageUrl}}"><a href="/order/customize-order/{{_id}}" class="button product-title">Order</a>
    </div>
    {{/each}}
    <h2>Lamb Doner</h2>
    {{#each lambs}}
    <div class="product-card"><img src="{{imageUrl}}"><a href="/order/customize-order/{{_id}}" class="button product-title">Order</a>
    </div>
    {{/each}}
</div>