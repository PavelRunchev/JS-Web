

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>RentACar</title>
    <link rel="stylesheet" type="text/css" href="/css//style.css" />
    <link rel="icon" href="/static/logo.png" />
</head>
</body class="preload">
    <header>
        <nav>
            <img id="logo" src="/favicon.ico" alt="logo"/>
            <ul id="main-nav">
                 {{#if currentUser.isAdmin}}
                    <li><strong>{{currentUser.username}}</strong></li>  
                     
                     <li><a href="/users/createCar">Add Car</a></li>
                {{/if}}
                <li><a href="/">home</a></li>

                {{#if currentUser}}  
                    <li><a href="/about">About for System</a></li>                 
                    <li><a href="/cars/all?page=0">all cars</a></li> 
                    {{#if currentUser.isAdmin}}

                    {{else}}
                        <li><a href="/users/profile/{{currentUser.id}}">profile</a></li>
                    {{/if}}                    
                    <li><a href="/logout">logout</a></li>
            
            </ul>
                
                    <ul id="user">
                        {{else}}
                            <li><a href="/users/register">register</a></li>
                            <li><a href="/users/login">login</a></li>
                         {{/if}}
                     </ul>
               
        </nav>
    </header>
    <section id="main-container">
        <main>
          {{{body}}}
        </main>
    </section>
    <footer>
        <span>&copy 2018 RAIDERS Team - All Right Reserved</span>
    </footer>
    <script>
        document.onload = function() {
            document
                .querySelector('body')
                .classList
                .remove('preload');
        }
    </script>
</body>
</html>